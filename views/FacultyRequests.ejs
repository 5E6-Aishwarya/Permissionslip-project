    <body>
        <div class="c2">
        <h1>BVRIT HYDERABAD College of Engineering for Women</h1></div>
        <h2>Hi <%= fac.name %>!</h2>
        <form action="/fachodlog" method="get">
            <button class="button1"><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSVpnCgaI2cL0_43sY7j0a0hiE9IieBXewsDFluRmtWoei9KVyiGM31tQTaXljtMGMRgDg&usqp=CAU" height="50px" width="50px"></button>
        </form>
            <table>
                <th>Roll No</th>
                <th>Reason&nbsp&nbsp&nbsp</th>
                <th>Permitted</th>
        <% data.forEach(function(field){ %>
            <form method = "get" action = '/response'>
                <input type = "text" name = "email"  value = <%= fac.email %> hidden readonly>
                <input type = "password" name = "pwd" value = <%= fac.password %> hidden readonly>
                <tr>
                <td>
                <%= field.rno %>
                <input type="text" name="RollNo" value= <%= field.rno %> hidden readonly> &nbsp</td>
                <td>
                <%= field.reason %>&nbsp</td>
                <td>
                <select name="status">
                    <option>accept</option>
                    <option>reject</option>
                </select>
                <!-- <input type = "submit" value = "Submit"></td> -->
                <button class="btn btn-secondary">Submit</button>
            </tr>
            </form>
        <% }) %>
        </table>
